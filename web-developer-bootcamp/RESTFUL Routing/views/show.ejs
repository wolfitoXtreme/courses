<% include partials/header %>


<div class="ui main text container segment">
    <header class="ui huge header"><%= blog.title %></header>
    
    <div class="ui top attached">
        <div class="item">
            <figure>
                <img src="<%= blog.image %>" alt="<%= blog.title %>" class="ui centered rounded image">
            </figure>
        </div>

        <div class="content">
            <span><%= blog.created.toDateString() %></span>

            <div class="description">
                <!-- using '-' instead of '=' allows to render HTML -->
                <%- blog.body %>
            </div>

        </div>
        
        <a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">Edit this post</a>

        <form method="POST" action="/blogs/<%= blog._id %>?_method=DELETE" class="ui form delete-form">
            <button type="submit" class="ui red basic button">Delete this post</button>
        </form>

    </div>
    
</div>

<% include partials/footer %>
