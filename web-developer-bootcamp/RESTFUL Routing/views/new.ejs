<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>


        <form method="POST" action="/blogs" class="ui form">
      
            <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" id="title" placeholder="blog title!" required>
            </div>

            <div class="field">
                <label for="image">Image</label>
                <input type="text" name="blog[image]" id="image" placeholder="Enter an image!" required>
            </div>

            <div class="field">
                <label for="description">Description</label>
                <textarea type="text" name="blog[body]" id="description" placeholder="description!" required></textarea>
            </div>

            <button type="submit" class="ui primary button big">Create new blog post</button>

        </form>

        <p>
            <a href="/blogs">view all posts</a>
        </p>
</div>

