<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit &quot;<%= blog.title %>&quot;</div>


        <form method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class="ui form">
      
            <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" id="title" placeholder="blog title!" value="<%= blog.title %>" required>
            </div>

            <div class="field">
                <label for="image">Image</label>
                <input type="text" name="blog[image]" id="image" placeholder="Enter an image!" value="<%= blog.image %>" required>
            </div>

            <div class="field">
                <label for="description">Description</label>
                <textarea type="text" name="blog[body]" id="description" placeholder="description!" required><%= blog.body %></textarea>
            </div>

            <button type="submit" class="ui primary button big">Edit blog post</button>

        </form>

        <p>
            <a href="/blogs">view all posts</a>
        </p>
</div>

<% include partials/footer %>
