<% include ../partials/header %>

<div class="container">
    <div class="row text-centered">
        <h1>Edit comment for <b>"<%= campground.name %>"</b></h1>
        <div class="form-wrapper">
            <form  action="/campgrounds/<%= campground.id %>/comments/<%= comment.id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <textarea 
                        type="text" 
                        name="comment[text]" 
                        placeholder="Enter a comment!" class="form-control"
                    ><%= comment.text %></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Edit comment</button>
                </div>
            </form>
        </div>
        <p>
            <a href="/campgrounds">view campgrounds</a>
        </p>
    </div>
</div>

<% include ../partials/footer %>
