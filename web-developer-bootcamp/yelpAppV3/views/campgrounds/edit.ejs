
<% include ../partials/header %>

<div class="container">
    <div class="row text-centered">
        <h1>Edit <%= campground.name %></h1>
        <div class="form-wrapper">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">              
                    <input 
                        type="text" 
                        name="campground[name]"
                        value="<%= campground.name %>"
                        placeholder="Enter a new campground!" 
                        class="form-control"
                    >
                </div>
                <div class="form-group">              
                    <input 
                        type="number" 
                        name="campground[price]"
                        value="<%= campground.price %>"
                        placeholder="Enter a price!" 
                        class="form-control"
                        step="0.01"
                    >
                </div>
                <div class="form-group">
                    <input 
                        type="text" 
                        name="campground[image]" 
                        value="<%= campground.image %>"
                        placeholder="Enter an image!" 
                        class="form-control"
                    >
                </div>
                <div class="form-group">
                    <textarea 
                        type="text" 
                        name="campground[description]"
                        placeholder="description!" 
                        class="form-control"
                    ><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Edit campground</button>
                </div>
            </form>
        </div>
        <p>
            <a href="/campgrounds">view campgrounds</a>
        </p>
    </div>
</div>

<% include ../partials/footer %>
