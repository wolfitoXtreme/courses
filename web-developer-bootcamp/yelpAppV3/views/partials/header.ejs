<!DOCTYPE html>
<html class="no-js">
<head>
    <title>YelpCamp App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">

    <% if(typeof(page) !== 'undefined' && page === 'home') { %>
        <script type="text/javascript" src="/js/modernizr-custom.min.js" async></script>
        <link rel="stylesheet" href="/stylesheets/home.css">
    <% } %>
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">YelpCamp</a>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser) { %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <% }
                        else { 
                    %>
                        <li><a href="#"><strong>Current user: <%= currentUser.username %></strong></a</li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <% // renders error/success messages via flash module %>
    <% if(error && error.length > 0) { %>
        <div class="container">
            <div class="alert alert-danger" role="alert"><%= error %></div>
        </div>
    <% } %>

    <% if(success && success.length > 0) { %>
        <div class="container">
            <div class="alert alert-success" role="alert"><%= success %></div>
        </div>
    <% } %>
