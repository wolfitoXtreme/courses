<% include partials/header %>
<h1>The posts page</h1>

<%= posts %>

<!-- using for loop -->

<ul>
<%
    for(var i = 0; i < posts.length; i++) {
%>
    <li>
        <h3><%=posts[i].title %></h3>
        <p>
            <b>author:</b> <%=posts[i].author %><br>
            <b>date:</b> <%=posts[i].date %>
        </p>

    </li>
<%
    }
%>
</ul>

<!-- using forEach loop -->
<ul>
<%
    posts.forEach(function(post){
%>
    <li>
        <h3><%=post.title %></h3>
        <p>
            <b>author:</b> <%=post.author %><br>
            <b>date:</b> <%=post.date %>
        </p>

    </li>
<%
    })
%>
</ul>

<% include partials/footer %>