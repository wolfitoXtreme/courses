<% include ../partials/header %>

<div class="container">
    <div class="row text-centered">
        <h1>Create New Comment for <b>&lt;&lt;<%= campground.name %>&gt;&gt;</b></h1>
        <div class="form-wrapper">
            <form method="POST" action="/campgrounds/<%= campground.id %>/comments">
                <div class="form-group">              
                    <input type="text" name="comment[author]" placeholder="Enter an author name!" class="form-control">
                </div>
                <div class="form-group">
                    <textarea type="text" name="comment[text]" placeholder="Enter a comment!" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Create new comment</button>
                </div>
            </form>
        </div>
        <p>
            <a href="/campgrounds">view campgrounds</a>
        </p>
    </div>
</div>

<% include ../partials/footer %>
