<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <!-- campground -->
            <div class="thumbnail">
                
                <figure>
                    <img src="<%= campground.image %>"  alt="<%= campground.name %>" title="<%= campground.name %>" class="img-responsive">
                </figure>
                
                <div class="caption-full">
                    <h5 class="pull-right">$00.00</h5>
                    <h3><a href="#"><%= campground.name %></a></h3>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <!-- campground -->

            <!-- comments -->
            <h4>Comments</h4>
            <div class="well">
                <p class="text-right">
                    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary">Add a comment</a>
                </p>
                
                <hr>

                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <b><%= comment.author %></b>
                            <span class="pull-right">10 days ago</span>

                            <p>
                                <%= comment.text %>
                            </p>

                        </div>
                    
                    </div>
                <% }) %>
            </div>

            <p class="text-right">
                <a href="/campgrounds">View all campgrounds</a>
            </p> 
            <!-- comments -->



        </div>
    </div>

</div>

<% include ../partials/footer %>
